<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">12dp</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="GoldButton" parent="Button">
        <item name="background">@drawable/button_gold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SilverButton" parent="Button">
        <item name="background">@drawable/button_gold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BronzeButton" parent="Button">
        <item name="background">@drawable/button_bronze</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="white">#FFFFFF</color>
</resources>
